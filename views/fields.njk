<div class="item-content">
    <h2>Avatar URL</h2>
    <input type="url" name="avatar_url" id="img" placeholder="https://" value="{{instructor.avatar_url}}">
</div>
<div class="item-content">
    <h2>Instrutor</h2>
    <input type="text" name="name" id="name" placeholder="Nome do Instrutor" value="{{instructor.name}}">
</div>
<div class="item-content">
    <h2>Data de Nascimento</h2>
    <input type="date" name="birth" id="birth" min="21" max="50" value="{{instructor.birth}}">
</div>
<div class="item-content">
    <h2>Sexo</h2>
    <input type="radio" 
    name="gender" 
    id="masc" 
    value="M" 
    checked="checked" 
    {%if instructor.gender == "M"%}
    checked
    {%endif%}
    >
    <label for="masculino">Masculino</label>
    <input type="radio" 
    name="gender" 
    id="fem" 
    value="F" 
    {%if instructor.gender == "F"%}
    checked
    {%endif%}
    >
    <label for="feminino">Feminino</label>
</div>
<div class="item-content">
    <h2>Modalidade</h2>
    <input id="services" name="services" type="text" placeholder="Separe as modalidades por vÃ­rgula" 
    value="{{instructor.services}}">
</div>
<button type="submit">Salvar Instrutor</button>