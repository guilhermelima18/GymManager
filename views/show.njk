{%extends "layout.njk"%}

{%block title%}
    <title>Instrutor Cadastrado - Gym Manager</title>
{%endblock%}

{%block content%}
    <header>
        <a href="/">Instrutores</a>
        <a href="/members">Alunos</a>
    </header>

    <div class="container">
        <div class="card-img">
            <img src="{{instructor.avatar_url}}" alt="Imagem Perfil" style="width: 100%; background-position: center; opacity: 0.9;">
        </div>
        <div class="content">
            <h1>Detalhes</h1>
            <div class="item-content">
                <h2>Instrutor</h2>
                <p>{{instructor.name}}</p>
            </div>
            <div class="item-content">
                <h2>Idade</h2>
                <p>{{instructor.age}}</p>
            </div>
            <div class="item-content">
                <h2>Sexo</h2>
                <p>{{"Masculino" if instructor.gender == "M" else "Feminino"}}</p>
            </div>
            <div class="item-content">
                <h2>Modalidade</h2>
                <div>
                    <p>{{instructor.services}}</p>
                </div>
            </div>
            <div class="item-content">
                <h2>Matr√≠cula</h2>
                <p>{{instructor.created_at}}</p>
            </div>
            <a href="/instructors/{{instructor.id}}/edit">Editar</a>
        </div>
    </div>
    {%endblock%}

</html>