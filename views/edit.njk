{%extends "layout.njk"%}

{%block title%}
    <title>Editar Instrutor - Gym Manager</title>
    {%endblock%}

    {%block content%}
        <div class="cards">
            <form method="POST" action="/instructors?_method=PUT">
                <div class="img">
                    <img src="https://source.unsplash.com/collection/3465564/500x500" alt="Imagem Perfil">
                </div>
                <div class="content-main">
                    <h1>Editar Instrutor</h1>

                    {%include "fields.njk"%}

                    <input type="hidden" name="id" value={{instructor.id}}>
                </div>
            </form>

            <form class="cards-form" action="/instructors?_method=DELETE" method="POST">
                <input type="hidden" name="id" value={{instructor.id}}>
                <button type="submit">Deletar Instrutor</button>
            </form>
        </div>
        {%endblock%}

    </html>